<Window x:Class="TaskTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTracker"
        xmlns:local1="clr-namespace:TaskTracker.ViewModel.TaskTracker.ViewModels;assembly=TaskTracker.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local1:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Поисковая строка -->
        <TextBox Grid.Row="0" x:Name="searchTextBox" Margin="5" />

        <!-- Столбцы для задач -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!-- Столбец "To do" -->
        <Border BorderBrush="Black" BorderThickness="1" Margin="1">
            <StackPanel>
                <TextBlock Text="To do" FontWeight="Bold" Margin="5" />
                <ListBox ItemsSource="{Binding ToDoTasks}" DisplayMemberPath="Name" />
            </StackPanel>
        </Border>

        <!-- Столбец "In process" -->
        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="1">
            <StackPanel>
                <TextBlock Text="In process" FontWeight="Bold" Margin="5" />
                <ListBox ItemsSource="{Binding InProgressTasks}" DisplayMemberPath="Name" />
            </StackPanel>
        </Border>

        <!-- Столбец "Done" -->
        <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" Margin="1">
            <StackPanel>
                <TextBlock Text="Done" FontWeight="Bold" Margin="5" />
                <ListBox ItemsSource="{Binding DoneTasks}" DisplayMemberPath="Name" />
            </StackPanel>
        </Border>
        </Grid>
    </Grid>
</Window>
