<Window x:Class="TaskTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTracker" 
        xmlns:vm="clr-namespace:TaskTracker.ViewModel"
        mc:Ignorable="d"
        Title="TaskTracker" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter"/>
        <vm:TasksConverter x:Key="taskConvert"/>
        <vm:AddOrEditConvertor x:Key="AddOrEditConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>


        <!-- Поисковая строка -->
        <TextBox Grid.Row="0" x:Name="searchTextBox" Margin="5" />

        <!-- Столбцы для задач -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Столбец "To do" -->
            <Border BorderBrush="Black" BorderThickness="1" Margin="1">
                <StackPanel x:Name="ToDoTasks">
                    <TextBlock Text="To do" FontWeight="Bold" Margin="5" />
                    <ItemsControl ItemsSource="{Binding ToDoTasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <TextBlock Text="{Binding Name}" Margin="3"/>
                                    <Button Content="Edit" Command="{Binding DataContext.EditTaskCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" Margin="3"/>
                                    <Button Content="Delete" Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" Margin="3"/>
                                </WrapPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Button Content="Add Task" Command="{Binding AddTaskCommand}" CommandParameter="ToDo" Margin="5" />
                </StackPanel>
            </Border>

            <!-- Столбец "In process" -->
            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="1">
                <StackPanel x:Name="InProcessTasks">
                    <TextBlock Text="In process" FontWeight="Bold" Margin="5" />
                    <ItemsControl ItemsSource="{Binding InProgressTasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="LightGray"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <WrapPanel>
                                        <TextBlock Text="{Binding Name}" Margin="3"/>
                                        <Button Content="Edit" Command="{Binding DataContext.EditTaskCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" Margin="3"/>
                                        <Button Content="Delete" Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" Margin="3"/>
                                    </WrapPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Button Content="Add Task" Command="{Binding AddTaskCommand}" CommandParameter="InProgress" Margin="5" />
                </StackPanel>
            </Border>

            <!-- Столбец "Done" -->
            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" Margin="1">
                <StackPanel x:Name="DoneTasks">
                    <TextBlock Text="Done" FontWeight="Bold" Margin="5" />
                    <ItemsControl x:Name="Done" ItemsSource="{Binding DoneTasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <TextBlock Text="{Binding Name}" Margin="3"/>
                                    <Button Content="Edit" Command="{Binding DataContext.EditTaskCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" Margin="3"/>
                                    <Button Content="Delete" Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" Margin="3"/>
                                </WrapPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Button Content="Add Task" Command="{Binding AddTaskCommand}" CommandParameter="Done" Margin="5" />
                </StackPanel>
            </Border>

        </Grid>
        <!-- Панель добавления новой задачи -->
        <Border x:Name="qwe" Grid.RowSpan="2" Grid.ColumnSpan="3" Background="#AA000000" Visibility="{Binding IsAddingTask, Converter={StaticResource VisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding SelectedTask}">
                <StackPanel Margin="30" Background="White" Width="400">
                    <TextBlock Text="New Task" FontWeight="Bold" Margin="5" />
                    <TextBox Text="{Binding SelectedTask.Name}" Margin="5" />
                    <DatePicker SelectedDate="{Binding SelectedTask.DateStartTask}" />
                    <TextBox Text="{Binding SelectedTask.Description}" Margin="5" />
                    <ComboBox ItemsSource="{Binding StatusList}" SelectedItem="{Binding SelectedTask.Status}"/>
                    <Button Content="Save" Command="{Binding IsAddOrEditTask, Converter={StaticResource AddOrEditConverter}}" Margin="5" />
                    <Button Content="Cancel" Command="{Binding CancelAddTaskCommand}" Margin="5" />
                </StackPanel>
            </ItemsControl>
        </Border>
    </Grid>
</Window>
